[flake8]
max-line-length = 88
# Temporarily ignore long-line violations (E501) from legacy code. We'll
# phase these fixes in; keeping E402/F403/F405 ignored to avoid noisy false
# positives due to dynamic import patterns in this repo.
extend-ignore = E203, W503, E402, F403, F405, E501
exclude = .git,__pycache__,docs,build,dist,venv,.venv
